


Search our pet database!

<%= form_tag('/pets', :method => 'get') do %>
  <div>
  <%= label_tag :dog, "Dogs" %>
  <%= radio_button_tag :select, "dogs" %>
  <br>
  <%= label_tag :cat, "Cats" %>
  <%= radio_button_tag :select, "cats" %>
  <br>
  <%= label_tag :high_risk, "High-risk" %>
  <%= radio_button_tag :select, "high_risk"%>
  <br>
  <%= label_tag :all, "All Pets" %>
  <%= radio_button_tag :select, "all"%>
  <br>
  </div>
  <%= submit_tag 'Search' %>
<% end %>
<br>

<br>
<% if @pets %>
<% @pets.each do |pet| %>
  <%= image_tag pet.image.url(:thumb) %>
  <%= link_to pet.name, pet_path(pet) %>
  <br>
<% end %>
<% end %>

<h3> These lucky pets have found homes. Check out their stories! </h3>
<% @rescued_pets.each do |pet| %>
<%= image_tag pet.image.url(:thumb) %>
<%= link_to pet.name, pet_rescues_path(pet) %>
  <br>
<% end %>
