<%= form_for @owner, html: { multipart: true } do |form| %>

<% if @owner.errors.any? %>
  <div id="error_explanation">
    <h2>
      There were some issues while creating your account...
    </h2>

    <ul>
    <% @owner.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div>
<%= form.label :image %>
<br>
<%= form.file_field :image %>
</div>

<br>

  <div>
  <%= form.label :name, "Name" %>
  <br>
  <%= form.text_field :name %>
  </div>

<br>

  <div>
  <%= form.label :zip_code, "Zip code" %>
  <br>
  <%= form.number_field :zip_code %>
  </div>

<br>

  <div>
  <%= form.check_box(:adopter)%>
  <%= form.label :adopter, "Willing to adopt?"%>
  </div>

<br>

  <div>
  <%= form.check_box(:fosterer)%>
  <%= form.label :fosterer, "Willing to foster?"%>
  </div>

<br>

  <div>
    <%= form.label :bio, "About you:" %>
    <br>
    <%= form.text_area :bio %>
  </div>

<br>

  <button class="btn waves-effect waves-light" type="submit" name="action">Submit</button>

<% end %>
